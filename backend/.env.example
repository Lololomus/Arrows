# ============================================
# ARROW PUZZLE - BACKEND CONFIGURATION
# ============================================

# App Settings
APP_NAME="ArrowReward"
DEBUG=false
API_PREFIX="/api/v1"
ENVIRONMENT="production"

# Dev Auth (MUST stay disabled in production)
DEV_AUTH_ENABLED=false
DEV_AUTH_ALLOWLIST=""
DEV_AUTH_AUTO_CREATE=false
DEV_AUTH_DEFAULT_COINS=10000
DEV_AUTH_DEFAULT_ENERGY=5

# Security
JWT_SECRET="CHANGE_THIS_TO_RANDOM_STRING_MIN_32_CHARS"
JWT_ALGORITHM="HS256"
JWT_EXPIRE_HOURS=1

# Database (PostgreSQL)
DATABASE_URL="postgresql+asyncpg://arrow_user:CHANGE_PASSWORD@localhost:5432/arrowpuzzle"

# Redis
REDIS_URL="redis://localhost:6379/0"

# Telegram Bot
TELEGRAM_BOT_TOKEN="YOUR_BOT_TOKEN_FROM_BOTFATHER"
TELEGRAM_BOT_USERNAME="YOUR_BOT_USERNAME"
WEBAPP_URL="https://your-domain.example"

# CORS (Укажите ваш домен!)
CORS_ORIGINS="https://your-domain.example,https://t.me"

# Rate Limiting (requests per minute)
RATE_LIMIT_AUTH=10
RATE_LIMIT_GAME=60
RATE_LIMIT_SHOP=30

# Anti-Cheat
ANTICHEAT_MIN_LEVEL_TIME=5
ANTICHEAT_MAX_WINRATE=95
ANTICHEAT_ENABLED=true
