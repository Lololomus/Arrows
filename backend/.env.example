# ============================================
# ARROW PUZZLE - BACKEND CONFIGURATION
# ============================================

# App Settings
APP_NAME="Arrow Puzzle"
DEBUG=false
API_PREFIX="/api/v1"
ENVIRONMENT="production"

# Security
JWT_SECRET="CHANGE_THIS_TO_RANDOM_STRING_MIN_32_CHARS"
JWT_ALGORITHM="HS256"
JWT_EXPIRE_HOURS=1

# Database (PostgreSQL)
DATABASE_URL="postgresql+asyncpg://arrow_user:CHANGE_PASSWORD@localhost:5432/arrowpuzzle"

# Redis
REDIS_URL="redis://localhost:6379/0"

# Telegram Bot
TELEGRAM_BOT_TOKEN="YOUR_BOT_TOKEN_FROM_BOTFATHER"
TELEGRAM_BOT_USERNAME="YourBotUsername"
WEBAPP_URL="https://yourdomain.com"

# CORS (Укажите ваш домен!)
CORS_ORIGINS="https://yourdomain.com,https://t.me"

# Rate Limiting (requests per minute)
RATE_LIMIT_AUTH=10
RATE_LIMIT_GAME=60
RATE_LIMIT_SHOP=30

# Anti-Cheat
ANTICHEAT_MIN_LEVEL_TIME=5
ANTICHEAT_MAX_WINRATE=95
ANTICHEAT_ENABLED=true